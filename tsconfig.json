{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types",
            "resources/assets/ts/types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "resources/assets/ts/**/*"
    ]
}
